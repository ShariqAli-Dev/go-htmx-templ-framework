	{name: "Fiber", path: "/assets/fiber.png", website: "https://gofiber.io/"},
	{name: "TailwindCSS", path: "/assets/tailwind.png", website: "https://tailwindcss.com/"},
	{name: "Templ", path: "/assets/templ.png", website: "https://templ.guide"},
